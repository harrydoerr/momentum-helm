generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id                   Int          @id @default(autoincrement())
  experience           String[]
  firstName            String
  lastName             String
  title                String
  leftSideConnections  Connection[] @relation("leftSideConnections")
  rightSideConnections Connection[] @relation("rightSideConnections")
}

model Connection {
  id          Int     @id @default(autoincrement())
  leftSideId  Int
  rightSideId Int
  leftSide    Profile @relation("leftSideConnections", fields: [leftSideId], references: [id])
  rightSide   Profile @relation("rightSideConnections", fields: [rightSideId], references: [id])
}
